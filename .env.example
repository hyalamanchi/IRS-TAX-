# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_TYPE=sqlite
DATABASE_URL=sqlite:///tax_forms.db
# For PostgreSQL: postgresql://username:password@host:port/database
# For MongoDB: mongodb://username:password@host:port/database

# OCR Configuration
TESSERACT_PATH=
# Windows example: C:\Program Files\Tesseract-OCR\tesseract.exe
# Linux/Mac: Usually auto-detected

# NLP Model Configuration
NLP_MODEL=dbmdz/bert-large-cased-finetuned-conll03-english

# E-Filing Configuration (Optional)
ENABLE_EFILING=false
EFILING_PROVIDER=irs_mef
EFILING_ENV=test
EFILING_ENDPOINT=https://testclient.irs.gov/efile/ws
EFILING_USERNAME=your_test_username
EFILING_PASSWORD=your_test_password
EFILING_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Application Configuration
OUTPUT_DIR=./output
LOG_LEVEL=INFO
WORKERS=4

# Security Configuration
SECRET_KEY=your-secret-key-for-sessions
ALLOWED_HOSTS=localhost,127.0.0.1

# Cloud Configuration (Optional)
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Azure
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=
GCP_BUCKET_NAME=

# Development Configuration
ENVIRONMENT=development
DEBUG=true

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=10
MEMORY_LIMIT=2GB

# Monitoring Configuration
ENABLE_METRICS=false
METRICS_PORT=9090